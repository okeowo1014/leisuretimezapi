# ===========================================================================
# Leisuretimez API — Environment Configuration
#
# Copy this file to .env and fill in the values.
#
# DEVELOPMENT (DEBUG=True):
#   - Email: printed to console (no SMTP needed)
#   - Users: auto-activated on registration (no email verification)
#   - CORS: allows all origins
#   - Rate limits: relaxed (1000/min anon, 2000/min user)
#   - URLs: default to localhost
#
# PRODUCTION (DEBUG=False):
#   - Email: sent via Zoho SMTP (EMAIL_HOST_PASSWORD required)
#   - Users: must verify email before login
#   - CORS: only CORS_ALLOWED_ORIGINS
#   - Rate limits: strict (30/min anon, 120/min user)
#   - Security: HSTS, SSL redirect, secure cookies
# ===========================================================================

# ---------------------------------------------------------------------------
# Core Django (REQUIRED)
# ---------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ---------------------------------------------------------------------------
# Database (SSH Tunnel)
# ---------------------------------------------------------------------------
SSH_HOST=premium296.web-hosting.com
SSH_PORT=21098
SSH_USER=your-ssh-user
SSH_PASSWORD=your-ssh-password
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_PORT=3306
DB_LOCAL_PORT=5522

# ---------------------------------------------------------------------------
# Stripe
# ---------------------------------------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_your-public-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ---------------------------------------------------------------------------
# PDFShift
# ---------------------------------------------------------------------------
PDFSHIFT_API_KEY=your-pdfshift-api-key

# ---------------------------------------------------------------------------
# Email
# When DEBUG=True:  emails are printed to console, no SMTP needed.
# When DEBUG=False: emails sent via Zoho SMTP, EMAIL_HOST_PASSWORD is REQUIRED.
# ---------------------------------------------------------------------------
EMAIL_HOST_USER=support@leisuretimez.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=support@leisuretimez.com

# ---------------------------------------------------------------------------
# User Activation
# AUTO_ACTIVATE_USERS=True  → users are active immediately after registration
# AUTO_ACTIVATE_USERS=False → users must verify email before login
# Defaults to the value of DEBUG if not set.
# ---------------------------------------------------------------------------
# AUTO_ACTIVATE_USERS=True

# ---------------------------------------------------------------------------
# Site URLs (defaults depend on DEBUG)
# DEBUG=True:  http://localhost:8000, http://localhost:3000
# DEBUG=False: https://api.leisuretimez.com, https://www.leisuretimez.com
# ---------------------------------------------------------------------------
# SITE_URL=https://api.leisuretimez.com
# FRONTEND_URL=https://www.leisuretimez.com

# ---------------------------------------------------------------------------
# Admin
# ---------------------------------------------------------------------------
ADMIN_EMAIL=contact@leisuretimez.com
CONTACT_FROM_EMAIL=contact@leisuretimez.com

# ---------------------------------------------------------------------------
# Static & Media (production paths — leave unset for dev defaults)
# ---------------------------------------------------------------------------
# STATIC_ROOT=/home/findepbl/leisuretimez/static
# STATICFILES_DIRS=/home/findepbl/leisuretimez/public/static
# MEDIA_URL=https://media.leisuretimez.com/
# MEDIA_ROOT=/home/findepbl/leisuretimezmedia

# ---------------------------------------------------------------------------
# CORS (only used when DEBUG=False; in dev, all origins are allowed)
# ---------------------------------------------------------------------------
# CORS_ALLOWED_ORIGINS=https://www.leisuretimez.com,https://leisuretimez.com

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------
# LOG_DIR=/var/log/leisuretimez
